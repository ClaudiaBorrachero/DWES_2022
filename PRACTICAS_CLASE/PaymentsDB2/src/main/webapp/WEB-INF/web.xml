<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>PaymentsDB2</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
		<servlet-name>ListadoPagos</servlet-name>
		<servlet-class>org.alixar.servidor.cnbm.controller.ListadoPagos</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>UpdatePayments</servlet-name>
		<servlet-class>org.alixar.servidor.cnbm.controller.Update</servlet-class>
	</servlet> 
	
	<servlet>
		<servlet-name>RemovePayments</servlet-name>
		<servlet-class>org.alixar.servidor.cnbm.controller.Remove</servlet-class>
	</servlet> 
	
	<servlet-mapping>
		<servlet-name>ListadoPagos</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
<servlet-mapping>
		<servlet-name>UpdatePayments</servlet-name>
		<url-pattern>/Update</url-pattern>
	</servlet-mapping> 
	
	<servlet-mapping>
		<servlet-name>RemovePayments</servlet-name>
		<url-pattern>/Remove</url-pattern>
	</servlet-mapping>  
  
</web-app>